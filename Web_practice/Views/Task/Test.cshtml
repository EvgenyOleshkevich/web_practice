@model Web_practice.Models.Pages.Task.TestModel

@{
	ViewData["Title"] = "Test";
}

<h1>Test</h1>

<textarea readonly cols="50" rows="20">
	@Model.TestContent
</textarea>

<h4>danger zone</h4>

<div class="row">
	<div class="col-md-4">
		<form asp-action="TestDelete" asp-controller="Task" method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<button type="submit" class="button fit" name="testIdEncode" value="@Web_practice.Utilities.ProtectData.GetInstance().Encode(Model.Test.Id)">Удалить тест</button>
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-action="Index">Back to List</a>
</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
